<SampleGridLayout>:
    id: calculator
    display: entry    
    cols: 1
    rows: 2
    spacing: 10
    padding: 10

    BoxLayout:
        orientation: "horizontal"
        size_hint_x: 1
        spacing: 10
        
        Button:
            text: "Vue system"
            size_hint_x: .85

        BoxLayout:
            orientation: "vertical"
            size_hint_x: 0.15

            Button:
                text: "Prod 1"
                background_normal: 'icon22.png'
                background_down: 'icon2.png'
                size_hint: 1, 0.333
                

            Button:
                text: "Prod 2"
                background_normal: 'icon22.png'
                background_down: 'icon2.png'
                size_hint: 1, 0.333
                
            Button:
                text: "Prod 3"
                background_normal: 'icon22.png'
                background_down: 'icon2.png'
                size_hint: 1, 0.333
                

    BoxLayout:
        id: entry
        orientation: "horizontal"
        size_hint_x: 1
        
        BoxLayout:
            orientation: "vertical"
            size_hint_x: 0.15
        
            Button:
                text: "Poste 1"
                background_normal: 'icon11.png'
                background_down: 'icon1.png'
                size_hint: 1, 0.333
                on_press: entry.text = self.text
                on_press: root.set_title_poste(self.text)
                
            Button:
                text: "Poste 2"
                background_normal: 'icon11.png'
                background_down: 'icon1.png'
                size_hint: 1, 0.333
                on_press: entry.text = self.text
                on_press: root.set_title_poste(self.text)

            Button:
                text: "Poste 3"
                background_normal: 'icon11.png'
                background_down: 'icon1.png'
                size_hint: 1, 0.333
                on_press: entry.text = self.text
                on_press: root.set_title_poste(self.text)


        BoxLayout:
            orientation: "vertical"
            size_hint_x: 0.7
        


        
        BoxLayout:
            orientation: "vertical"
            size_hint_x: 0.15
        
            Button:
                text: "Navette 1"
                background_normal: 'icon33.png'
                background_down: 'icon3.png'
                size_hint: 1, 0.333

            Button:
                text: "Navette 2"
                background_normal: 'icon33.png'
                background_down: 'icon3.png'
                size_hint: 1, 0.333

            Button:
                text: "Navette 3"
                background_normal: 'icon33.png'
                background_down: 'icon3.png'
                size_hint: 1, 0.333
       

   